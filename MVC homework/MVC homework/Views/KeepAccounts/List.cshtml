@model List<MVC_homework.Models.KeepAccountsViewModel>

<table border="1" width="100%">
    <tr>
        <th></th>
        <th>#</th>
        <th>類別</th>
        <th>日期</th>
        <th>金額</th>
        <th>備註</th>
    </tr>
    @if (Model != null && Model.Any())
    {
        int no = 1;
        foreach (var item in Model)
        {
            <tr>
                <td><a href="@Url.Action("Delete", "KeepAccounts", new { id = item.ID })" onclick="return confirm('確定刪除嗎?')">刪除</a></td>
                <td>@(no++)</td>
                <td>@item.Type</td>
                <td>@item.Date.ToString("yyyy-MM-dd")</td>
                <td>@item.Money.ToString("N0")</td>
                <td>@item.Remark</td>
            </tr>
        }
    }
</table>